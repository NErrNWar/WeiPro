/**index.wxss**/
.mainpage{
  background-color:#5e91fd;
  width:100%;
  height: 100%;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}
.photoview{
  display: flex;
  flex-direction: column;
  background-color: white;
  height: 7rem;
  width: 7rem;
  border-radius: 50%;
  align-content: center;
  justify-content: center;
  margin-top: 45%;
}
.photoimg{
  display:flex;
  height: 4rem;
  width: 4rem;
  padding-top: 10%;
  padding-left: 10%;
  padding-right: 10%;
  color:#5e91fd;
}
.takephoto{
  background-color: transparent;
  align-items: center;
  justify-items: center;
  border-radius: 50%;
}
.phototxt{
  font-weight: 600;
}