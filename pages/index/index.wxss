/**index.wxss**/
/*主页面*/
.mainpage{
  background-color:#5e91fd;
  width:100%;
  height: 100%;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}
/*拍照按钮*/
.photoview{
  display: flex;
  flex-direction: column;
  background-color: white;
  height: 12rem;
  width: 12rem;
  border-radius: 50%;
  align-content: center;
  justify-content: center;
  margin-top: 45%;
}
.photoimg{
  display:flex;
  height: 8rem;
  width: 8rem;
  color:#5e91fd;
  background-image: url("http://www.52css.top:8000/images/Camera.png");
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.takephoto{
  background-color: transparent;
  align-items: center;
  justify-items: center;
  border-radius: 50%;
  background: none !important;
  display:flex;
  flex-direction: column;
}
/*去除button边框*/
.takephoto::after{
  border: none;
}
.phototxt{
  font-weight: 600;
  display: block;
  color: #5e91fd;
}

.info_tab{
  margin-top: 10%;
  width: 100%;
  height: 8%;
  background-color: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
}

.text_info{
  font-size: 15px;
  color: white;
  height: 50%;
  width: 27%;
  border-radius: 15rem;
  background-color: #7da6ff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 3%;
}

.text_info::before{
  border: none;
}

.bottom_info{
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 10%;
  display:flex;
  justify-content: center;
  align-items: center;
}

.bottom_info text{
  font-size: 14px;
  color: white;
}

