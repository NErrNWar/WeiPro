/**index.wxss**/
/*主页面*/
.mainpage{
  background-color:#5e91fd;
  width:100%;
  height: 100%;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}
/*拍照按钮*/
.photoview{
  display: flex;
  flex-direction: column;
  background-color: white;
  height: 7rem;
  width: 7rem;
  border-radius: 50%;
  align-content: center;
  justify-content: center;
  margin-top: 45%;
}
.photoimg{
  display:flex;
  height: 4rem;
  width: 4rem;
  color:#5e91fd;
  background-image: url("http://www.52css.top:8000/images/Camera.png");
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.takephoto{
  background-color: transparent;
  align-items: center;
  justify-items: center;
  border-radius: 50%;
  background: none !important;
}
/*去除button边框*/
.takephoto::after{
  border: none;
}
.phototxt{
  font-weight: 600;
}