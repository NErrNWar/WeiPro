page{
    height: 100%;
    width: 100%;
}
.photopage{
    height: 100%;
    width: 100%;
}
.camera{
    height:100%;
    width: 100%;
    display: flex;
    flex-direction: column;
}
.light_btn{
    height: 3rem;
    width: 3rem;
    border-radius: 50%;
    margin-top: 10px;
    margin-left: 10px;
}
.light_flash{
    height: 30px;
    width: 30px;
    margin: 8px;
}
.bottom_tab{
    position: fixed;
    height: 5rem;
    width: 100%;
    display: flex;
    flex-direction: row;
    bottom: 1rem;
    font-size: 5px;
    justify-items: center;
    align-items: center;
}
.choose_img{
    background-color: white;
    font-size: 16px;
    height: 40px;
    width: 40px;
    border-radius: 50%;
    color: black;
    margin-left: 15px;
}
.take_btn{
    height: 5rem;
    width: 5rem;
}
.close_photo{
    background: white;
    font-size: 16px;
    height: 40px;
    width: 40px;
    color: black;
    border-radius: 50%;
    margin-right: 15px;
}